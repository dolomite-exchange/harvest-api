{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2019",
    "module": "CommonJS",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDirs": [
      "./src",
      "./scripts",
      "./test"
    ]
  },
  "include": [
    "./src/**/*",
    "./scripts",
    "./test",
    "./test/**/*"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
